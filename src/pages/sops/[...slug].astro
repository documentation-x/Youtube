---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('sops');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="container">
    <header>
      <a href="/" class="back-link">‚Üê ÌôàÏúºÎ°ú</a>
      <h1>{post.data.title}</h1>
      <div class="meta">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('ko-KR')}
        </time>
        {post.data.category && (
          <span class="category">üìÅ {post.data.category}</span>
        )}
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>
    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: var(--accent);
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e5e5e5;
  }

  h1 {
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    color: #666;
    font-size: 0.9rem;
    flex-wrap: wrap;
  }

  .category {
    color: #0066cc;
    font-weight: 500;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background: var(--gray);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
  }

  .content {
    line-height: 1.7;
  }

  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--text);
  }

  .content :global(pre) {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
  }

  .content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .content :global(pre code) {
    background: transparent;
    padding: 0;
  }
</style>
